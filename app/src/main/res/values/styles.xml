<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="hintTextColor">@color/color_hint_grey</item>
        <item name="android:textColor">@color/color_dark_grey_two</item>
        <item name="android:textColorHint">@color/color_hint_grey</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="Widget.AppCompat.TextView.ToolbarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppCompactButtonTheme" parent="Widget.AppCompat.Button">
        <!--<item name="fontFamily">@font/manrope_bold</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color_dark_grey</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="Widget.AppCompat.ImageButton.ToolbarButton">
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>